@page
@model UcBank.Pages.BankAccounts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Bank Account</h1>

<h4>Bank Account Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountNumber" class="control-label"></label>
                <input asp-for="BankAccount.AccountNumber" class="form-control" />
                <span asp-validation-for="BankAccount.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.CurrentBalance" class="control-label"></label>
                <input asp-for="BankAccount.CurrentBalance" class="form-control" />
                <span asp-validation-for="BankAccount.CurrentBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.Created" class="control-label"></label>
                <input asp-for="BankAccount.Created" class="form-control" />
                <span asp-validation-for="BankAccount.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.Name" class="control-label"></label>
                <input asp-for="BankAccount.Name" class="form-control" />
                <span asp-validation-for="BankAccount.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.LastDeposit" class="control-label"></label>
                <input asp-for="BankAccount.LastDeposit" class="form-control" />
                <span asp-validation-for="BankAccount.LastDeposit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.InterestRate" class="control-label"></label>
                <input asp-for="BankAccount.InterestRate" class="form-control" />
                <span asp-validation-for="BankAccount.InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountHolderId" class="control-label"></label>
                <select asp-for="BankAccount.AccountHolderId" class ="form-control" asp-items="ViewBag.AccountHolderId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
