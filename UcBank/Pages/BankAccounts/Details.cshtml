@page
@model UcBank.Pages.BankAccounts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Bank Account: @Model.BankAccount.AccountNumber</h1>

<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.CurrentBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.CurrentBalance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.LastDeposit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.LastDeposit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.InterestRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.InterestRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount.AccountHolder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.AccountHolder.FullName)
        </dd>
    </dl>
</div>
@if (Model.BankAccount.Transactions.Any() == false)
{
    <div class="alert alert-info">No Transactions to Display</div>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BankAccount.Transactions[0].TransactionDate)</th>
            <th>@Html.DisplayNameFor(model => model.BankAccount.Transactions[0].TransactionId)</th>
            <th>@Html.DisplayNameFor(model => model.BankAccount.Transactions[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.BankAccount.Transactions[0].Amount)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BankAccount.Transactions.OrderByDescending(x => x.TransactionDate))
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TransactionDate)</td>
                <td>@Html.DisplayFor(modelItem => item.TransactionId)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td><a asp-page="/transactions/details" asp-route-id="@item.TransactionId">Details</a></td>
            </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.BankAccount.BankAccountId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
