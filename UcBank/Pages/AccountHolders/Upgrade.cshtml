@page
@model UcBank.Pages.AccountHolders.UpgradeModel

@{
    ViewData["Title"] = "Upgrade";
}

<h1>Upgrade</h1>

<h4>Upgrade @Model.AccountHolder.FullName to Platinum?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountHolder.AccountHolderId" />
            
            <div class="form-group">
                <input type="submit" value="Upgrade" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
