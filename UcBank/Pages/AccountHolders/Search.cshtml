@page
@model UcBank.Pages.AccountHolders.SearchModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search Account Holders</h1>

<div class="row">
    <div class="col">
        <form action="" method="get" class="form-inline">
            <input asp-for="Query" class="form-control mr-sm-2 mb-2" placeholder="Search Last Name..." />
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
    </div>
</div>

@if (Model.SearchCompleted)
{
    if (Model.AccountHolder.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHolder[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHolder[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHolder[0].DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHolder[0].SocialSecurityNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHolder[0].PlatinumMember)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHolder[0].Notes)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AccountHolder)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SocialSecurityNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlatinumMember)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.AccountHolderId">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.AccountHolderId">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.AccountHolderId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-info">
                    No results match your term <strong>@Model.Query</strong>
                </div>
            </div>
        </div>
    }
}