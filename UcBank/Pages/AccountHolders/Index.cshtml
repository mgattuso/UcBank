@page
@model UcBank.Pages.AccountHolders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Account Holders</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].SocialSecurityNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].PlatinumMember)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AccountHolder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocialSecurityNumber)
            </td>
            <td>
                @if (item.PlatinumMember)
                {
                    <span class="badge badge-warning">Platinum</span>
                }
                else
                {
                    <span class="badge badge-secondary">Standard</span>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AccountHolderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AccountHolderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AccountHolderId">Delete</a>
                @if (!item.PlatinumMember)
                {
                    <text>|</text> <a asp-page="./Upgrade" asp-route-id="@item.AccountHolderId">Upgrade</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
